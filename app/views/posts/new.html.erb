<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
     <%= form_with(model: @post, local: true ,url: choose_new_or_edit ) do |post| %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          
        
          <%= post.text_field :content %>
          <%= post.submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>